<div class="col-md-10 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Editar Cliente</h3>
        </div>
        <div class="card-body"> 
            <form action="/notes/edit-note/{{note._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">

                <div class="form-group">

                    <div class="d-flex my-2">
                        <div class="mx-2 col-md-3">
                            <h4>
                                 Nombre:
                            </h4>
                        </div>
                        <div class="mx-2 col-md-8 ">
                            <input type="text" name="nombre" class="form-control" placeholder="Nombre" value="{{note.nombre}}">
                        </div>
                        
                    </div>

                    <div class="d-flex">
                        <div class="mx-2 col-md-3 my-2">
                            <h4>
                                Edad:
                            </h4>
                        </div>

                        <div class="mx-2 col-md-8">
                            <input type="text" name="edad" class="form-control" placeholder="edad" value="{{note.edad
                            }}">
                        </div>    
                    </div>

                    <div class="d-flex">
                        <div class="mx-2 col-md-3 my-2">
                            <h4>
                                Estatura:
                            </h4>
                        </div>
                        <div class="mx-2 col-md-8">
                            <input type="text" name="estatura" class="form-control" placeholder="Estatura" value="{{note.estatura}}">
                        </div>    
                    </div>

                    <div class="d-flex">
                        <div class="mx-2 col-md-3 my-2">
                            <h4>
                                Telefono:
                            </h4>
                        </div>
                        <div class="mx-2 col-md-8">
                            <input type="text" name="telefono" class="form-control" placeholder="telefono" value="{{note.telefono}}">
                        </div>    
                    </div>

                    <div class="d-flex">
                        <div class="mx-2 col-md-3 my-2">
                            <h4>
                                Tel. Emergencia:
                            </h4>
                        </div>
                        <div class="mx-2 col-md-8">
                            <input type="text" name="telefono_emergencia" class="form-control" placeholder="Telefono de Emergencia" value="{{note.telefono_emergencia}}">
                        </div>    
                    </div>

                    <div class="d-flex">
                        <div class="mx-2 col-md-3 my-2">
                            <h4>
                                Dia de Pago:
                            </h4>
                        </div>
                        <div class="mx-2 col-md-8">
                            <input type="text" name="dia_pago" class="form-control" placeholder="Dia de pago" value="{{note.dia_pago}}">
                        </div>    
                    </div>                    
                </div>
              
                <div class="form-group d-flex justify-content-center">
                    <button class="btn btn-primary btn-block col-md-4" type="submit">
                        Guardar
                    </button>
                </div>

            </form>
        </div>
    </div>
</div>